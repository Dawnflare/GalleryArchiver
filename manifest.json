{
  "manifest_version": 3,
  "name": "Gallery Archiver by Dawnflare",
  "version": "1.0",
  "description": "Capture infinite-scroll galleries into a single MHTML.  Features autoscroll and image persistence to compensate for dynamic image offloading by the gallery.",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "pageCapture"
  ],
  "host_permissions": [
    "https://civitai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gallery Archiver by Dawnflare"
  },
  "options_page": "options.html",
  "commands": {
    "start": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Start capturing"
    },
    "reset": {
      "suggested_key": {
        "default": "Alt+Shift+R"
      },
      "description": "Reset and reload"
    },
    "save": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Save archive"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://civitai.com/*"
      ],
      "js": [
        "content/archiver.js"
      ],
      "css": [
        "styles/bucket.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
